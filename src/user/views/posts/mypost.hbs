<div class="wrapper" id="wrapper">
    <!-- Start Blog Area -->
    <div class="page-blog bg--white section-padding--lg blog-sidebar right-sidebar">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-12">
                    <div class="blog-page">
                        <div class="page__header pt--40">
                            <div class="row">
                                <div class="col-lg-3">
                                     <h2>Bài viết của tôi</h2>
                                </div>
                                <div class="col-lg">
                                    <h2>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-filter"></i>
                                            {{nameStatus}}
                                        </button>
                                        <div class="dropdown-menu">          
                                            <a type="submit" href="?status=0" class="dropdown-item" >Tất cả</a>
                                            <a type="submit" href="?status=1" class="dropdown-item" >Đợi duyệt</a>
                                            <a type="submit" href="?status=2" class="dropdown-item" >Đã duyệt</a>
                                        </div>
                                    </div>
                                    </h2>
                                </div>
                            </div>
                           
                        </div>
                        {{#if posts}}
                            {{#each posts}}
                            <!-- Start Single Post -->
                            <article class="blog__post d-flex flex-wrap">
                                <div class="thumb">
                                    <a href="/users/mypost/{{_id}}">
                                        <img src="{{cover}}" alt="ảnh bài viết">
                                    </a>
                                </div>
                                <div class="content">
                                    <h4><a href="/users/mypost/{{_id}}">{{title}}</a></h4>
                                    <ul class="post__meta">
                                        <li>Trạng thái: <span style="color: red;">{{status2}}</span></li>
                                    </ul>
                                    <p>{{descriptions}}</p>
                                    <div class="blog__btn">
                                        <a href="/users/mypost/{{_id}}">read more</a>
                                    </div>
                                </div>
                            </article>
                            <!-- End Single Post -->
                            {{/each}}
                        {{else}}
                            <div class="d-flex justify-content-center">
                                Chưa có bài viết!
                            </div>
                        {{/if}}
                        
                    </div>
                    {{#gt totalPosts 0}}
                        <ul class="wn__pagination d-flex justify-content-center pt--40">
                            {{#isnt currentPage 1}}
                            <li>
                                <a href="/users/mypost?page={{prevPage}}">
                                <span aria-hidden="true" class="zmdi zmdi-chevron-left"></span>
                                </a>
                            </li>
                            {{/isnt}}

                            {{#if hasPreviousPage}}
                            <li>
                                <a href="/users/mypost?{{prePageQueryString}}">
                                {{prevPage}}
                                </a>
                            </li>
                            {{/if}}

                            
                        
                            <li class="active">
                                <a href="javascript:void(0)" tabindex="-1">
                                {{currentPage}}
                                </a>
                            </li>

                            {{#if hasNextPage}}
                            <li>
                                <a  href="/users/mypost?{{nextPageQueryString}}">
                                {{nextPage}}
                                </a>
                            </li>
                            {{/if}}

                            {{#gt lastPage currentPage}}
                            <li>
                                <a href="/users/mypost?page={{nextPage}}" >
                                <span aria-hidden="true" class="zmdi zmdi-chevron-right"></span>
                                </a>
                            </li>
                            {{/gt}}
                        </ul>
                    {{/gt}}      
                    {{!-- <ul class="wn__pagination">
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#"><i class="zmdi zmdi-chevron-right"></i></a></li>
                    </ul> --}}
                </div>
                <div class="col-lg-3 col-12 md-mt-40 sm-mt-40">
                    <div class="wn__sidebar">                     
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Blog Area -->
</div>

